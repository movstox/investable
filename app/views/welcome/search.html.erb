<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 col-sx-12">
      <%= render partial: 'v2/search/top_bar' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <form class="form-inline text-left" action="/search">
        <%= render partial: 'v2/search/filters' %>
        <hr/>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-lg">Search</button>
        </div>
      </form>
    </div>
    <div class="col-md-10">
      <%= render partial: 'v2/search/results', locals: { patents: @results } %>
    </div>
  </div>
</div>
